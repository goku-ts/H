    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Patient Details - MedRec</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>

    <body class="bg-gray-50 min-h-screen font-sans">
        <div class="container mx-auto px-4 py-8 max-w-4xl">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <h1 class="text-xl font-bold text-blue-400">Patient Details</h1>
                <a href="/patients" class="text-blue-400 hover:text-blue-500 text-sm font-medium">Back to
                    Patients</a>
            </div>

            <!-- Patient Card -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <div class="flex items-center border-b border-gray-200 pb-4 mb-6">
                    <img src="/images/avatar.jpg" alt="Patient Image" class="w-24 h-24 rounded-full mr-4 object-cover">
                    <div>
                        <h2 class="text-2xl font-semibold text-gray-800">
                            <%= patient.name %>
                        </h2>
                        <p class="text-sm text-gray-500">ID: <%= patient.id %>
                        </p>
                    </div>
                </div>

                <!-- Basic Info Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <span class="text-sm text-gray-500 block">Age</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.age %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Gender</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.gender %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Contact</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.contact %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Email</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.email %>
                        </span>
                    </div>
                    <div class="sm:col-span-2">
                        <span class="text-sm text-gray-500 block">Address</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.address %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Insurance ID</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.insuranceId %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Weight</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.weight %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Height</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.height %>
                        </span>
                    </div>
                    <div>
                        <span class="text-sm text-gray-500 block">Last Visit Date</span>
                        <span class="text-lg text-gray-800">
                            <%= patient.lastVisitDate %>
                        </span>
                    </div>
                </div>

                <!-- Medical History Section -->
                <div class="mt-8">
                    <h3 class="text-xl font-semibold text-gray-700 mb-4">Medical History</h3>
                    <div class="bg-gray-100 p-4 rounded-md">
                        <ul class="list-disc pl-5 text-gray-800 space-y-2">
                            <% if (patient.medicalHistory) { %>
                                <% patient.medicalHistory.forEach(med=> { %>
                                    <li class="text-sm text-gray-600">
                                        <%= med %>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3"
                                                            class="py-3 px-4 border-b border-gray-200 text-sm text-gray-600 text-center">
                                                            No medication history
                                                        </td>
                                                    </tr>
                                                    <% } %>

                        </ul>
                    </div>
                </div>

                <!-- Prescriptions Section -->
                <div class="mt-8">
                    <h3 class="text-xl font-semibold text-gray-700 mb-4">Prescriptions</h3>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white border border-gray-200 rounded-md">
                            <thead>
                                <tr class="bg-purple-50">
                                    <th class="py-3 px-4 text-left text-sm font-semibold text-purple-700">Medication
                                    </th>
                                    <th class="py-3 px-4 text-left text-sm font-semibold text-purple-700">Dosage</th>
                                    <th class="py-3 px-4 text-left text-sm font-semibold text-purple-700">Date
                                        Prescribed</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% if (patient.medications) { %>
                                    <% patient.medications.forEach(med=> { %>
                                        <tr class="hover:bg-gray-50">
                                            <td class="py-3 px-4 border-b border-gray-200 text-sm text-gray-600">
                                                <%= med.name %>
                                            </td>
                                            <td class="py-3 px-4 border-b border-gray-200 text-sm text-gray-600">
                                                <%= med.dosage %>
                                            </td>
                                            <td class="py-3 px-4 border-b border-gray-200 text-sm text-gray-600">
                                                <%= med.date %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3"
                                                        class="py-3 px-4 border-b border-gray-200 text-sm text-gray-600 text-center">
                                                        No medication records found.
                                                    </td>
                                                </tr>
                                                <% } %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>
</body>

</html>