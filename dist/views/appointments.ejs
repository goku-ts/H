<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="w-full h-52 bg-white border border-gray-200">
        <!-- Header -->
        <div class="flex items-center justify-between p-5">
            <h1 class="text-xl font-bold text-blue-400">Appointments</h1>
        </div>
        <table class="w-full h-52 bg-white border border-gray-200">
            <thead>
                <tr class="bg-gray-100">
                    <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">ID</th>
                    <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Patient
                    </th>
                    <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Doctor
                    </th>
                    <th class="py-2 px-4 border-b border-gray-200 text-left text-sm font-semibold text-gray-700">Date
                    </th>
                </tr>
            </thead>
            <tbody>

                <% appointments.forEach(a=> { %>

                    <tr class="hover:bg-gray-50 cursor-pointer"
                        onclick="window.location.href='/appointment/<%= a.id %>'">
                        <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-600">
                            <%= a.id %>
                        </td>
                        <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-600">
                            <%= a.patient %>
                        </td>
                        <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-600">
                            <%= a.doctor %>
                        </td>
                        <td class="py-2 px-4 border-b border-gray-200 text-sm text-gray-600">
                            <%= a.date %>
                        </td>
                    </tr>
                    <% }) %>


            </tbody>
        </table>
    </div>
</body>

</html>